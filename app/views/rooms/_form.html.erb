<%= form_with(model: room, class: "w-50") do |form| %>
  <% if room.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(room.errors.count, "error") %> prohibited this room from being saved:</h2>

      <ul>
        <% room.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mt-6 grid grid-cols-1 gap-x-6 gap-y-10 sm:grid-cols-2 lg:grid-cols-4 xl:gap-x-8">
    <% @room.room_images.each do |image| %>
      <div class="group relative">
          <div class="aspect-h-1 aspect-w-1 w-full overflow-hidden rounded-md lg:aspect-none group-hover:opacity-75 lg:h-80">
            <%= cl_image_tag(image.room_image_url, class: "h-full w-full object-cover object-center lg:h-full lg:w-full", default_image: "v1691814805/default-image.svg") %>
          </div>
      </div>
    <% end %>
  </div>

  <%#= cl_image_tag(@room.image_url,  class: "h-auto max-w-lg rounded-lg", default_image: "default_image.jpg") %>
  <div class="grid gap-4 mb-6 md:grid-cols-2 mt-7">
    <div class="">
      <%= form.label :roomType, class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
      <%= form.text_field :roomType, class: "block w-full p-3 text-gray-900 border border-gray-300 rounded-lg bg-gray-50 sm:text-xs focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" %>  
    </div>

    <div class="">
      <%= form.label :maxPersons, class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
      <%= form.number_field :maxPersons, class: "block w-full p-3 text-gray-900 border border-gray-300 rounded-lg bg-gray-50 sm:text-xs focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" %>  
    </div>

      <div class="">
    <%= form.label :roomPrice, class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
    <%= form.number_field :roomPrice, placeholder: "Only Enter Number", class: "block w-full p-3 text-gray-900 border border-gray-300 rounded-lg bg-gray-50 sm:text-xs focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" %>  
  </div>

  <div class="">
    <%= form.label :gender, class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
    <%= select_tag "room[gender]", options_for_select(Room.gender_nums.map {|k, v| [t("room.gender.#{k}"), k]}, selected: @room.gender ), class: "block w-full p-3 text-gray-900 border border-gray-300 rounded-lg bg-gray-50 sm:text-xs focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" %>  
  </div>

  <div class="">
    <%= form.label :roomNumber, class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
    <%= form.number_field :roomNumber, class: "block w-full p-3 text-gray-900 border border-gray-300 rounded-lg bg-gray-50 sm:text-xs focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" %>  
  </div>

  <div class="">
    <%= form.label :floor, class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
    <%= form.number_field :floor, class: "block w-full p-3 text-gray-900 border border-gray-300 rounded-lg bg-gray-50 sm:text-xs focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" %>  
  </div>

  <div class="">
    <%= form.label :address, class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
    <%= form.text_field :address, class: "block w-full p-3 text-gray-900 border border-gray-300 rounded-lg bg-gray-50 sm:text-xs focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" %>  
  </div>

  <div class="">
    <%= form.label :room_status, class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
    <%= select_tag "room[room_status]", options_for_select(Room.room_status_nums.map { |k, v| [t("room.room_status.#{k}"), k]}, selected: @room.room_status), class: "block w-full p-3 text-gray-900 border border-gray-300 rounded-lg bg-gray-50 sm:text-xs focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" %>  
  </div>

  <div class="">
    <%# <div class="absolute inset-y-0 start-0 flex items-center ps-3.5 pointer-events-none">
      <svg class="w-4 h-4 text-gray-500 dark:text-gray-400" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
        <path d="M20 4a2 2 0 0 0-2-2h-2V1a1 1 0 0 0-2 0v1h-3V1a1 1 0 0 0-2 0v1H6V1a1 1 0 0 0-2 0v1H2a2 2 0 0 0-2 2v2h20V4ZM0 18a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V8H0v10Zm5-8h10a1 1 0 0 1 0 2H5a1 1 0 0 1 0-2Z"/>
      </svg>
    </div> %>
    <%= form.label :startdate, class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
    <%= form.date_field :startDate, class: "block w-full p-3 text-gray-900 border border-gray-300 rounded-lg bg-gray-50 sm:text-xs focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", placeholder: "Start date" %>  
    <%# <input datepicker type="text" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full ps-10 p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="Select date"> %>
  </div>

  <div class="">
    <%= form.label :endDate, class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
    <%= form.date_field :endDate, class: "block w-full p-3 text-gray-900 border border-gray-300 rounded-lg bg-gray-50 sm:text-xs focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" %>  
  </div>

    <div class="">
      <%= form.label :header_image, class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
      <%= form.file_field :image, class: "block w-full mb-5 text-xs text-gray-900 border border-gray-300 rounded-lg cursor-pointer bg-gray-50 dark:text-gray-400 focus:outline-none dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400" %>
    </div>
</div>

  <div class="">
    <%= form.label :feedback, class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
    <%= form.text_field :feedback, class: "block w-full p-3 text-gray-900 border border-gray-300 rounded-lg bg-gray-50 sm:text-xs focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" %>  
  </div>

  <div class="mb-5">
    <%= form.label :details, class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
    <%= form.text_area :details, class: "block p-2.5 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" %>  
  </div>

    <div class="">
    <%#= form.hidden_field :room_photo_cache %>
    <%#= form.file_field :image, multiple: true, id: "small_size", class: "block w-full mb-5 text-xs text-gray-900 border border-gray-300 rounded-lg cursor-pointer bg-gray-50 dark:text-gray-400 focus:outline-none dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400" %>
    <%= form.fields_for :room_image do |ff| %>
      <%= form.label :room_image, class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
      <%= ff.file_field :room_image, include_hidden: false, multiple: true, name: "room_images[]", 
          class: "block w-full mb-5 text-xs text-gray-900 border border-gray-300 rounded-lg cursor-pointer bg-gray-50 dark:text-gray-400 focus:outline-none 
                  dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400" %>
    <% end %>
    <div class="px-4 sm:px-0 my-4">
      <p class="mt-1 max-w-2xl text-sm leading-6 text-gray-500">You can upload multiple image.</p>
    </div>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>


