<div id="<%= dom_id @room %>">
  <%= @room.roomType %>
  <%= @room.maxPersons %>
  <%= @room.roomPrice %>
  <%= @room.gender %>
  <%= @room.roomNumber %>
  <%= @room.floor %>
  <%= @room.address %>
  <%= @room.room_status %>
  <%= @room.feedback %>
  <%= @room.user_id %>
  <%= cl_image_tag(@room.image_url,  class: "object-cover h-75 w-96") if @room.image? %>



  <% if action_name != "show" %>
    <%= link_to "Show this room", room, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this room", edit_room_path(room), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>

