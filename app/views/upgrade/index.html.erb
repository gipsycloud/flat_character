<div class="items-center justify-center h-48 mb-4 mt-8 rounded bg-gray-50 dark:bg-gray-800">
  <div class="relative overflow-x-auto">
    <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
      <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
        <tr>
          <th scope="col" class="px-6 py-3">
              Item
          </th>
          <th scope="col" class="px-6 py-3">
              User Name
          </th>
          <th scope="col" class="px-6 py-3">
              Current Plan
          </th>
          <th scope="col" class="px-6 py-3">
              Billing Period
          </th>
           <th scope="col" class="px-6 py-3">
              Status
          </th>
          <th scope="col" class="px-6 py-3">
              Action
          </th>
        </tr>
      </thead>
      <tbody>
        <% @upgrades.each do |upgrade| %>
          <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
            <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
              <%= upgrade.id %>
            </th>
            <td class="px-6 py-4">
              <%= current_user.user_name %>
            </td>
            <td class="px-6 py-4">
              <%= upgrade.plan.plan_name %>
            </td>
            <td class="px-6 py-4">
              <%= upgrade.startDate.to_time.strftime('%B %e %Y') if upgrade.startDate? %>
            </td>
            <%# <td class="px-6 py-4"> %>
              <%#= upgrade.endDate.to_time.strftime('%B %e %Y') if upgrade.endDate? %>
            <%# </td> %>
            <td class="px-6 py-4">
              <%= I18n.t("upgrade.status.#{upgrade.status}") %> | <%= upgrade.user_id %>
            </td>
            <td class="px-6 py-4">
              <%= link_to "Upgrade", edit_upgrade_path(upgrade), class: "rounded-lg py-2 px-4 bg-gray-100 inline-block font-medium" %>
              <%= link_to "Show", upgrade, class: "rounded-lg py-2 px-4 bg-gray-100 inline-block font-medium" %>
              <%#= link_to "Delete", room_path(upgrade), method: :delete, class: "rounded-lg py-2 px-4 bg-gray-100 inline-block font-medium" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>