<div id="<%= dom_id plan %>">
  <% if action_name != "show" %>
    <%= link_to "Show this plan", plan, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this plan", edit_plan_path(plan), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
