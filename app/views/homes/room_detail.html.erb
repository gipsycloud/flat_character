<%= render "template/nav" %>

<section class="bg-white dark:bg-gray-900 py-16 sm:py-16">
  <div class="py-0 px-4 mx-auto max-w-screen-xl lg:px-6">
  <!-- more room photo -->
    <div class="bg-white">
      <div class="pt-2">
        <!-- Image gallery -->

      </div>
    </div>

    <div class="bg-white">
      <div class="mx-auto grid max-w-2xl grid-cols-1 items-center gap-x-8 gap-y-16 px-4 py-24 sm:px-6 sm:py-12 lg:max-w-7xl lg:grid-cols-2 lg:px-8">
        <div>
          <h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl"><%= @room.roomType.titleize %></h2>
          <p class="mt-4 text-gray-500"><%= @room.details %></p>

          <dl class="mt-16 grid grid-cols-1 gap-x-6 gap-y-10 sm:grid-cols-2 sm:gap-y-16 lg:gap-x-8">
            <div class="border-t border-gray-200 pt-4">
              <dt class="font-medium text-gray-900">Address</dt>
              <dd class="mt-2 text-sm text-gray-500"><%= @room.address %></dd>
            </div>
            <div class="border-t border-gray-200 pt-4">
              <dt class="font-medium text-gray-900">Max Person</dt>
              <dd class="mt-2 text-sm text-gray-500"><%= @room.maxPersons %></dd>
            </div>
            <div class="border-t border-gray-200 pt-4">
              <dt class="font-medium text-gray-900">Price</dt>
              <dd class="mt-2 text-sm text-gray-500"><%= @room.roomPrice %></dd>
            </div>
            <div class="border-t border-gray-200 pt-4">
              <dt class="font-medium text-gray-900">Gender</dt>
              <dd class="mt-2 text-sm text-gray-500"><%= @room.gender %></dd>
            </div>
            <div class="border-t border-gray-200 pt-4">
              <dt class="font-medium text-gray-900">Room Number</dt>
              <dd class="mt-2 text-sm text-gray-500"><%= @room.roomNumber %></dd>
            </div>
            <div class="border-t border-gray-200 pt-4">
              <dt class="font-medium text-gray-900">Room Status</dt>
              <dd class="mt-2 text-sm text-gray-500"><%= @room.room_status %></dd>
            </div>
          </dl>
        </div>
        <div class="grid grid-cols-2 grid-rows-2 gap-4 sm:gap-6 lg:gap-8">
          <%= cl_image_tag(@room.image_url,  class: "h-56 w-full rounded-md object-cover rounded-lg bg-gray-100", default_image: "default_image.jpg") %>
            <% @room.room_images.each do |r| %>
              <%= cl_image_tag(r.room_image_url,  class: "object-contain h-48 w-96 rounded-lg", default_image: "default_image.jpg") %>
            <% end %>
          <%# <img src="https://tailwindui.com/img/ecommerce-images/product-feature-03-detail-02.jpg" alt="Top down view of walnut card tray with embedded magnets and card groove." class="rounded-lg bg-gray-100"> %>
          <%# <img src="https://tailwindui.com/img/ecommerce-images/product-feature-03-detail-03.jpg" alt="Side of walnut card tray with card groove and recessed card area." class="rounded-lg bg-gray-100"> %>
          <%# <img src="https://tailwindui.com/img/ecommerce-images/product-feature-03-detail-04.jpg" alt="Walnut card tray filled with cards and card angled in dedicated groove." class="rounded-lg bg-gray-100"> %>
        </div>
      </div>
    </div>
  </div>
</section>

